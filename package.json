{
    "name": "ikaros",
    "version": "0.0.0",
    "private": true,
    "description": "ikaros is a blessing for workers, which can make you more relaxed after work.",
    "author": "ikaros",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "wait-on tcp:9999 && electron .",
        "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
        "electron:build": "vite build && electron-builder"
    },
    "dependencies": {
        "@electron/remote": "^2.1.1",
        "@element-plus/icons-vue": "^2.3.1",
        "electron-window-state": "^5.0.3",
        "element-plus": "^2.4.4",
        "knex": "^3.1.0",
        "pinia": "^2.1.7",
        "sqlite3": "^5.1.7",
        "uuid": "^9.0.1",
        "vue": "^3.3.11",
        "vue-router": "^4.2.5",
        "ws": "^8.16.0"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.5.2",
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "nodemon": "^3.0.2",
        "sass": "^1.69.6",
        "vite": "^5.0.10",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.app.ikaros",
        "productName": "ikaros",
        "copyright": "Copyright Â© 2021 <your-name>",
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        },
        "win": {
            "icon": "public/ikaros.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "buildDependenciesFromSource": true,
        "nodeGypRebuild": false,
        "npmRebuild": false,
        "files": [
            "dist/**/*",
            "electron/**/*",
            "src/common/**/*",
            "public/**/*"
        ]
    }
}
